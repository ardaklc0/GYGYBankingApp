@model GetCustomerViewModel
@{
    ViewData["Title"] = "Index";
}


<h1>Personal Details</h1>
@if (User.IsInRole("Admin") || Model.Accounts.Count() == 0)
{
    <div class="row-cols-6">
        <a asp-action="Create" class="btn btn-primary rounded-pill">Create</a>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Delete" asp-route-id="@Model.Customer.Id" class="btn btn-primary rounded-pill">Delete</a>    
        }
    </div>
}

<div>
    <hr />
    <dl class="row">
    </dl>
    <dt class = "col-sm-2">
        <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Customer.Name)
        </dt>
        <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Customer.Name)
        </dd>
        <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Customer.Surname)
        </dt>
        <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Customer.Surname)
        </dd>
        <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Customer.CreationDate)
        </dt>
        <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Customer.CreationDate)
        </dd>
        <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Customer.Age)
        </dt>
        <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Customer.Age)
        </dd>
        <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Customer.Location)
        </dt>
        <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Customer.Location)
        </dd>
        <dt class = "col-sm-2">
        Related Accounts
        </dt>
        <dd class = "col-sm-10">
            <ul>
                @foreach (var item in Model.Accounts)
                {
                  <li>
                      @item.Name
                  </li>
                }
            </ul>
        </dd>
        <div class="row-cols-6 p-2 mb-2">
            <a asp-action="Edit" asp-route-id="@Model.Customer.Id" class="btn btn-primary rounded-pill">Edit</a>
        </div>
</div>
