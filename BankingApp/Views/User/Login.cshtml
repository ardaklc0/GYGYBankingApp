@model BankingApp.Models.UserLoginViewModel

@{
    ViewData["Title"] = "Login";
}

<style>
    .btn{
        background-color: #417c30 !important;
        box-shadow: 0px 2px 2px 1px rgba(0, 0, 0, 0.5) !important;
        border: none !important;
    }
    .btn:hover{
        background-color: #3e8e41 !important;
    }
    .btn:active{
        background-color: #3e8e41 !important;
        box-shadow: 0px 0px 0px 0px !important;
        transform: translateY(4px) !important;
    }

    .form-control{
        box-shadow: 0px 2px 2px 1px rgba(0, 0, 0, 0.2);
    }
    .form-control:focus {
        border-color: #28a745;
        box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
    }
</style>

<div class="d-flex align-items-center justify-content-center">
    <img src="/assets/mvcfinance.png" width="300"/>
    @*<a type="button" class="btn btn-primary rounded-pill" asp-controller="User" asp-action="Login">Giriş Yap</a>*@
</div>
<h1>Welcome to MVC Finance</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group p-2 mb-2">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control rounded-pill" placeholder="Please enter a username"/>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group p-2 mb-2">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control rounded-pill" placeholder="Please enter a password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group p-2 mb-2">
                <input type="submit" value="Submit" class="btn btn-primary rounded-pill" />

                @*<a type="button" class="btn btn-primary rounded-pill" asp-controller="Home" asp-action="Index">Submit</a>*@
            </div>
        </form>
    </div>
</div>